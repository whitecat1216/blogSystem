{
  "title": "ブログ記事",
  "tableName": "blog_post",
  "searchFields": [],
  "listColumns": [],
  "formFields": [],
  "detailLayout": {
    "titleField": "title",
    "dateField": "created_at",
    "imageField": "hero_image",
    "tagsField": "tags",
    "excerptField": "excerpt",
    "contentField": "content",
    "order": ["title", "date", "image", "tags", "excerpt", "content"],
