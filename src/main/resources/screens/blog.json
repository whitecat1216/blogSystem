{
  "title": "ブログ記事管理",
  "tableName": "blog_post",
  "searchFields": [
    {
      "key": "title",
      "label": "タイトル",
      "type": "text",
      "placeholder": "タイトルで検索"
    },
    {
      "key": "author_id",
      "label": "作成者ID",
      "type": "number"
    },
    {
      "key": "status",
      "label": "公開状態",
      "type": "select",
      "options": ["draft", "published"]
    }
  ],
  "listColumns": [
    {
      "key": "id",
      "label": "ID",
      "sortable": true
    },
    {
      "key": "title",
      "label": "タイトル",
      "sortable": true
    },
    {
      "key": "status",
      "label": "公開状態",
      "sortable": true
    },
    {
      "key": "created_at",
      "label": "作成日",
      "sortable": true
    }
  ],
  "formFields": [
    {
      "key": "title",
      "label": "タイトル",
      "type": "text",
      "required": true
    },
    {
      "key": "content",
      "label": "本文",
      "type": "richtext",
      "required": true
    },
    {
      "key": "author_id",
      "label": "作成者ID",
      "type": "number",
      "required": false
    },
    {
      "key": "excerpt",
      "label": "抜粋",
      "type": "textarea",
      "required": false
    },
    {
      "key": "hero_image",
      "label": "アイキャッチ画像",
      "type": "file",
      "accept": "image/*",
      "maxSizeMb": 5,
      "uploadEndpoint": "/api/upload"
    },
    {
      "key": "tagIds",
      "label": "タグ",
      "type": "multiselect",
      "source": "/api/tag/list",
      "allowCreate": true,
      "required": false
    },
    {
      "key": "status",
      "label": "公開状態",
      "type": "select",
      "options": ["draft", "published"],
      "required": true
    }
  ],
  "pagination": {
    "pageSize": 10
  },
  "listLayout": {
    "type": "card",
    "titleField": "title",
    "dateField": "created_at",
    "excerptField": "excerpt",
    "imageField": "hero_image",
    "tagsField": "tags"
  },
  "detailLayout": {
    "titleField": "title",
    "dateField": "created_at",
    "imageField": "hero_image",
    "tagsField": "tags",
    "excerptField": "excerpt",
    "contentField": "content",
    "order": ["title", "date", "image", "tags", "excerpt", "content"],
    "comments": {
      "enabled": true,
      "tableName": "blog_comment",
      "foreignKey": "post_id",
      "authorField": "author",
      "textField": "comment_text",
      "dateField": "created_at",
      "allowAnonymous": false,
      "formFields": [
        {
          "key": "author",
          "label": "投稿者",
          "type": "text",
          "required": true,
          "autoFill": "username"
        },
        {
          "key": "comment_text",
          "label": "コメント",
          "type": "textarea",
          "required": true,
          "rows": 4
        }
      ]
    }
  }
}
